{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "functions": {
    "api/sitemap.xml.js": {
      "maxDuration": 10
    },
    "api/sitemap-index.xml.js": {
      "maxDuration": 10
    },
    "api/news-sitemap.xml.js": {
      "maxDuration": 10
    },
    "api/web-stories-sitemap.xml.js": {
      "maxDuration": 10
    },
    "api/videos-sitemap.xml.js": {
      "maxDuration": 10
    },
    "api/web3-sitemap.xml.js": {
      "maxDuration": 10
    },
    "api/sitemap-tools.xml.js": {
      "maxDuration": 10
    },
    "api/upsc-sitemap.xml.js": {
      "maxDuration": 10
    },
    "api/amp-story.js": {
      "maxDuration": 10
    }
  },
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "thebulletinbriefs.in"
        }
      ],
      "destination": "https://www.thebulletinbriefs.in/:path*",
      "statusCode": 301
    }
  ],
  "rewrites": [
    {
      "source": "/sitemap-index.xml",
      "destination": "/api/sitemap-index.xml"
    },
    {
      "source": "/sitemap.xml",
      "destination": "/api/sitemap.xml"
    },
    {
      "source": "/news-sitemap.xml",
      "destination": "/api/news-sitemap.xml"
    },
    {
      "source": "/web-stories-sitemap.xml",
      "destination": "/api/web-stories-sitemap.xml"
    },
    {
      "source": "/videos-sitemap.xml",
      "destination": "/api/videos-sitemap.xml"
    },
    {
      "source": "/web3-sitemap.xml",
      "destination": "/api/web3-sitemap.xml"
    },
    {
      "source": "/sitemap-tools.xml",
      "destination": "/api/sitemap-tools.xml"
    },
    {
      "source": "/upsc-sitemap.xml",
      "destination": "/api/upsc-sitemap.xml"
    },
    {
      "source": "/amp-story/:category/:slug",
      "destination": "/api/amp-story?category=:category&slug=:slug"
    },
    {
      "source": "/((?!api/|amp-story/).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/sitemap-index.xml",
      "headers": [
        { "key": "Content-Type", "value": "application/xml" },
        { "key": "Cache-Control", "value": "s-maxage=3600, stale-while-revalidate" }
      ]
    },
    {
      "source": "/sitemap.xml",
      "headers": [
        { "key": "Content-Type", "value": "application/xml" },
        { "key": "Cache-Control", "value": "s-maxage=3600, stale-while-revalidate" }
      ]
    },
    {
      "source": "/news-sitemap.xml",
      "headers": [
        { "key": "Content-Type", "value": "application/xml" },
        { "key": "Cache-Control", "value": "s-maxage=3600, stale-while-revalidate" }
      ]
    },
    {
      "source": "/web-stories-sitemap.xml",
      "headers": [
        { "key": "Content-Type", "value": "application/xml" },
        { "key": "Cache-Control", "value": "s-maxage=300, stale-while-revalidate=60" }
      ]
    },
    {
      "source": "/videos-sitemap.xml",
      "headers": [
        { "key": "Content-Type", "value": "application/xml" },
        { "key": "Cache-Control", "value": "s-maxage=3600, stale-while-revalidate" }
      ]
    },
    {
      "source": "/web3-sitemap.xml",
      "headers": [
        { "key": "Content-Type", "value": "application/xml" },
        { "key": "Cache-Control", "value": "s-maxage=3600, stale-while-revalidate" }
      ]
    },
    {
      "source": "/sitemap-tools.xml",
      "headers": [
        { "key": "Content-Type", "value": "application/xml" },
        { "key": "Cache-Control", "value": "s-maxage=3600, stale-while-revalidate" }
      ]
    },
    {
      "source": "/upsc-sitemap.xml",
      "headers": [
        { "key": "Content-Type", "value": "application/xml" },
        { "key": "Cache-Control", "value": "s-maxage=3600, stale-while-revalidate" }
      ]
    },
    {
      "source": "/amp-story/:category/:slug",
      "headers": [
        { "key": "Content-Type", "value": "text/html; charset=utf-8" },
        { "key": "Cache-Control", "value": "public, max-age=3600, s-maxage=7200" },
        { "key": "Access-Control-Allow-Origin", "value": "*" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=()" }
      ]
    }
  ],
  "trailingSlash": false
}